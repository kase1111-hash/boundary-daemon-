# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Batch files (Windows)
[*.bat]
end_of_line = crlf

# Makefiles require tabs
[Makefile]
indent_style = tab

# Git config files
[.git*]
indent_size = 2

# Configuration files
[*.{conf,ini,cfg}]
indent_size = 4

# Requirements files
[requirements*.txt]
indent_size = 4
